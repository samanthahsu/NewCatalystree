<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeTaskFractal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuickShower"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvTaskInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/catBlack"
            android:text="Turn your mouse off every time you leave you're computer for longer than 10 minutes!"/>

        <TextView
            android:id="@+id/tvTaskSubInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check in each day for 7 days to get rewards and to continue the challenge!"
            android:textColor="@color/catGrey"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btTaskReady"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am ready!"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>

</FrameLayout>